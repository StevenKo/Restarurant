<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/pager_background" 
        />
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />
    <RelativeLayout  android:id="@+id/watch_notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/restaurant_selector"
            android:clickable="true"
            android:padding="15dp"
            >
   
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看食記"
                />
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon"
                android:layout_alignParentRight="true"
                />  
        </RelativeLayout> 
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"/>
                <ImageButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/directions"/>
                <ImageButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/place"/>
                <ImageButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite"/>
            </LinearLayout>
        <ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十二廚自助餐廳 - 台北喜來登大飯店"
                />
            
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地 址:"
                android:textSize="23px" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/grid_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="台北市中正區忠孝東路一段12號1樓"
                android:textSize="20px" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="營 業 時 間 :"
                android:textSize="23px" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/grid_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="早餐：06:30 - 10:00"
                android:textSize="20px" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官 方 網 站 :"
                android:textSize="23px" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/grid_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="www.src.example"
                android:textSize="20px" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平 均 價 位 :"
                android:textSize="23px" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/grid_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="$459 ～ $630"
                android:textSize="20px" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐 廳 介 紹："
                android:textSize="23px" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/grid_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text=""
                android:textSize="20px" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            
        </LinearLayout>
        </ScrollView>

</LinearLayout>