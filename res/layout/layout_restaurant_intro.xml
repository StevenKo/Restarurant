<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/layout_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >
        <ProgressBar 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	/>        
    </LinearLayout>
    
    <LinearLayout 
	   	 	android:id="@+id/layout_reload"
	   	 	android:layout_width="fill_parent"
	   	 	android:layout_height="fill_parent"
	     	android:gravity="center"
	     	android:visibility="gone"
	     	android:background="@color/main_color_grey_dark"
	     	>
		    <TextView 
		        android:layout_width="wrap_content"
	   	 		android:layout_height="wrap_content"
	   	 		android:text="無法連線"
	   	 		android:textSize="18dp"
	   	 		android:layout_marginLeft="5dp"
	   	 		android:textColor="#6E6E6E"
		        />
		    <Button  android:id="@+id/button_reload"
		       android:layout_width="wrap_content"
	   	 	   android:layout_height="wrap_content"
	   	 	   android:layout_marginLeft="5dp"
	   	 	   android:text="重試"
		        />
		</LinearLayout>
    
    
	
   
 
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@color/pager_background" 
        />
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#000000"
        />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="#222222"
           android:layout_above="@+id/adView"
           android:id="@+id/buttons">
           <ImageButton 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/share"
           android:id="@+id/share_button"
           android:layout_weight="1"
           android:background="@drawable/restaurant_list_selector"
           android:layout_marginRight="1dp"/>
           <ImageButton 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/directions"
           android:id="@+id/direction_button"
           android:layout_weight="1"
           android:background="@drawable/restaurant_list_selector"
           android:layout_marginRight="1dp"
           />
           <ImageButton 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/place"
           android:id="@+id/place_button"
           android:layout_weight="1"
           android:background="@drawable/restaurant_list_selector"
           android:layout_marginRight="1dp"/>
           <ImageButton 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/favorite"
           android:id="@+id/favorite_button"
           android:layout_weight="1"
           android:background="@drawable/restaurant_list_selector"/>
       </LinearLayout>
       
        <ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/buttons">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地 址："
                android:textSize="18dp" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="台北市中正區忠孝東路一段12號1樓"
                android:textSize="16dp" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="營 業 時 間："
                android:textSize="18dp" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/opentime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="早餐：06:30 - 10:00"
                android:textSize="16dp" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官 方 網 站："
                android:textSize="18dp" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <Button
                       android:id="@+id/official_btn"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content" 
                       android:text="前往官方網站"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                       android:id="@+id/official_link_none"
                       android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:layout_marginTop="2px"
		               android:textSize="16dp" 
		               android:textColor="#555555"
		               android:typeface="serif"
                       android:text="無官方網站"
                    />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平 均 價 位："
                android:textSize="18dp" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text="$459 ～ $630"
                android:textSize="16dp" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            >
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐 廳 介 紹："
                android:textSize="18dp" 
                  android:textColor="#999999"
                  android:typeface="serif">
                </TextView>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@+id/author_tip">
                <TextView
                android:id="@+id/restaurant_intro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:text=""
                android:textSize="16dp" 
                android:textColor="#555555"
                android:typeface="serif"
                >
                </TextView>
                </RelativeLayout>
            </RelativeLayout>
            
        </LinearLayout>
        </ScrollView>
        
        <com.google.ads.AdView android:id="@+id/adView"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     ads:adUnitId="a151aea0bb767ab"
                     ads:adSize="SMART_BANNER"
                     ads:testDevices="353918051867212"
                     ads:loadAdOnCreate="true"/>
        
    </RelativeLayout>
   
      

</LinearLayout>